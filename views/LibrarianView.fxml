<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.LibrariansController">
    <TableView fx:id="librarianTable">
        <columns>
            <TableColumn fx:id="librarianIdColumn" text="ID"/>
            <TableColumn fx:id="librarianFirstNameColumn" text="First Name"/>
            <TableColumn fx:id="librarianLastNameColumn" text="Last Name"/>
            <TableColumn fx:id="librarianEmailColumn" text="Email"/>
        </columns>
    </TableView>

    <TextField fx:id="firstNameField" promptText="First Name"/>
    <TextField fx:id="lastNameField" promptText="Last Name"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <TextField fx:id="usernameField" promptText="Username"/>
    <TextField fx:id="passwordField" promptText="Password"/>

    <Button text="Add Librarian" onAction="#handleAddLibrarian"/>
    <Button text="Delete Librarian" onAction="#handleDeleteLibrarian"/>
</VBox>
